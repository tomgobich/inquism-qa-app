<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
    <h1 class="text-center">Log In</h1>
    {{#if session.isAuthenticated}}
      <p class="text-center">Logged in as {{session.currentUser.displayName}}</p>
      <button class="btn btn-block btn-default" {{action 'signOut'}}>Sign out</button>
    {{else}}
      <button class="btn btn-block btn-primary" {{action 'signIn' 'twitter'}}>Sign in with Twitter</button>
    {{/if}}
  </div>
</div>
