<div class="row">
  <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    {{#if responseMessage}}
    <div class="alert alert-dismissible alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Success!</strong> {{responseMessage}}
    </div>
    {{/if}}
    <form {{action 'postQuestion' on="submit"}}>
      <div class="form-group">
        <label for="question" class="control-label">Type your question below:</label>
        {{textarea name="question" rows="4" class="form-control" value=question}}
      </div>
      <div class="form-group">
        <label for="tags">Tag your question (max 3):</label>
        {{input type="text" name="tags" class="form-control" value=tags}}
      </div>
      <button type="submit" class="btn btn-primary" disabled={{if isPostQuestionValid false true}}>Submit Question</button>
    </form>
  </div>
</div>
